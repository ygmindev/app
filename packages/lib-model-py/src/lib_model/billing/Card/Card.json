{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/CardModel",
  "definitions": {
    "CardModel": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "expMonth": {
          "type": "number"
        },
        "expYear": {
          "type": "number"
        },
        "externalId": {
          "type": "string"
        },
        "fingerprint": {
          "type": "string"
        },
        "funding": {
          "$ref": "#/definitions/CARD_FUNDING"
        },
        "isPrimary": {
          "type": "boolean"
        },
        "last4": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "user": {
          "$ref": "#/definitions/CollectionModel<UserModel>"
        },
        "_id": {
          "type": "string"
        },
        "beforeCreate": {
          "type": "null"
        },
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "isFixture": {
          "type": "boolean"
        }
      },
      "required": [
        "_id",
        "created",
        "expMonth",
        "expYear",
        "externalId",
        "fingerprint",
        "funding",
        "last4",
        "name"
      ]
    },
    "CARD_FUNDING": {
      "type": "string",
      "enum": [
        "credit",
        "debit"
      ]
    },
    "CollectionModel<UserModel>": {
      "type": "array",
      "items": {
        "$ref": "../../user/User/User.json#/definitions/UserModel"
      }
    }
  }
}