{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/UtilityModel",
  "definitions": {
    "UtilityModel": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "description": {
          "type": "string"
        },
        "imageSrc": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "pricing": {
          "type": "string"
        },
        "type": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/UtilityTypeModel"
          }
        },
        "url": {
          "type": "string"
        },
        "_id": {
          "type": "string"
        },
        "beforeCreate": {
          "type": "null"
        },
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "isFixture": {
          "type": "boolean"
        }
      },
      "required": [
        "_id",
        "created",
        "name",
        "type"
      ]
    },
    "UtilityTypeModel": {
      "type": "string",
      "enum": [
        "authentication",
        "database",
        "function",
        "hosting",
        "payment",
        "sms",
        "smtp",
        "usage"
      ]
    }
  }
}