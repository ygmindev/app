{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/OrderModel",
  "definitions": {
    "OrderModel": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "items": {
          "type": "array",
          "items": {
            "$ref": "../ProductItem/product_item.json#/definitions/ProductItemModel"
          }
        },
        "paymentMethodId": {
          "type": "string"
        },
        "status": {
          "$ref": "#/definitions/ORDER_STATUS"
        },
        "_id": {
          "type": "string"
        },
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "isFixture": {
          "type": "boolean"
        },
        "beforeCreate": {
          "type": "null"
        }
      },
      "required": [
        "_id",
        "created"
      ]
    },
    "ProductItemModel": {
      "type": "object",
      "properties": {
        "imageSrc": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "price": {
          "type": "number"
        },
        "pricingId": {
          "type": "string"
        },
        "productId": {
          "type": "string"
        },
        "quantity": {
          "type": "number"
        }
      },
      "required": [
        "name",
        "pricingId",
        "productId"
      ],
      "additionalProperties": false
    },
    "ORDER_STATUS": {
      "type": "string",
      "enum": [
        "canceled",
        "completed",
        "refunded"
      ]
    }
  }
}